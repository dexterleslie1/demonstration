          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="JSR223 Groovy断言 - 检查JSON响应和状态码" enabled="true">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper

// 获取响应数据
String responseData = prev.getResponseDataAsString()
String responseCode = prev.getResponseCode()

// 检查状态码
if (!&quot;200&quot;.equals(responseCode)) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;响应状态码不是200，实际为: &quot; + responseCode)
    return
}

// 检查响应是否为空
if (responseData == null || responseData.trim().isEmpty()) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;响应数据为空&quot;)
    return
}

// 尝试解析JSON
try {
    def jsonSlurper = new JsonSlurper()
    def json = jsonSlurper.parseText(responseData)
    
    // 检查JSON是否包含slideshow字段
    if (json.slideshow == null) {
        AssertionResult.setFailure(true)
        AssertionResult.setFailureMessage(&quot;JSON响应中缺少slideshow字段&quot;)
        return
    }
    
    log.info(&quot;JSR223断言通过: JSON解析成功，包含slideshow字段&quot;)
} catch (Exception e) {
    AssertionResult.setFailure(true)
    AssertionResult.setFailureMessage(&quot;JSON解析失败: &quot; + e.getMessage())
}</stringProp>
