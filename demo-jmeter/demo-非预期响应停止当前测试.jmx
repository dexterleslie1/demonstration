          <JSR223PostProcessor guiclass="TestBeanGUI" testclass="JSR223PostProcessor" testname="JSR223 Groovy - 非预期则停止当前线程" enabled="true">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import groovy.json.JsonSlurper

String responseCode = prev.getResponseCode()
String responseData = prev.getResponseDataAsString()

int threadNum=ctx.getThreadNum();
// 停止第一个测试线程
if(threadNum == 0) {
	prev.setSuccessful(false)
	prev.setResponseMessage(&quot;停止第一个测试线程&quot;)
	prev.setStopThread(true)
	return
}

// 检查状态码是否为预期
if (!&quot;200&quot;.equals(responseCode)) {
    prev.setSuccessful(false)
    prev.setResponseMessage(&quot;非预期响应: 状态码=&quot; + responseCode)
    prev.setStopThread(true)
    log.warn(&quot;非预期响应，停止当前线程: 状态码=&quot; + responseCode)
    return
}

// 检查响应是否为空
if (responseData == null || responseData.trim().isEmpty()) {
    prev.setSuccessful(false)
    prev.setResponseMessage(&quot;非预期响应: 响应数据为空&quot;)
    prev.setStopThread(true)
    log.warn(&quot;非预期响应，停止当前线程: 响应数据为空&quot;)
    return
}

// 检查是否为有效JSON且包含预期结构（httpbin.org/json 返回 slideshow）
try {
    def json = new JsonSlurper().parseText(responseData)
    if (json.slideshow == null) {
        prev.setSuccessful(false)
        prev.setResponseMessage(&quot;非预期响应: JSON中缺少slideshow字段&quot;)
        prev.setStopThread(true)
        log.warn(&quot;非预期响应，停止当前线程: JSON中缺少slideshow&quot;)
        return
    }
    log.info(&quot;响应符合预期，继续执行&quot;)
} catch (Exception e) {
    prev.setSuccessful(false)
    prev.setResponseMessage(&quot;非预期响应: JSON解析失败 - &quot; + e.getMessage())
    prev.setStopThread(true)
    log.warn(&quot;非预期响应，停止当前线程: &quot; + e.getMessage())
}</stringProp>
